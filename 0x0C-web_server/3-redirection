#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page

line="Hello World!"
repl="<head>\n\t<meta http-equiv=\"Refresh\" content=\"0; URL=https://www.youtube.com/watch?v=QH2-TGUlwu4\" />\n</head>"

sudo sed -i "s@$line@$repl@g" /var/www/html/index.html
sudo service nginx restart
