#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page

#line="# pass PHP scripts to FastCGI server"
#repl="location /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}"

apt-get update
apt-get install nginx -y
ufw allow 'Nginx HTTP'

rm /etc/nginx/sites-enabled/default

echo -e "server {
	listen 80 default_server;
	listen [::]:80 default_server;

	location / {
		return 200 'Hellow World!';
		add_header Content-Type text/plain;
	}
	location /redirect_me {
		return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
	}
}" > /etc/nginx/sites-available/new_conf

ln -s /etc/nginx/sites-available/new_conf /etc/nginx/sites-enabled/

service nginx restart
